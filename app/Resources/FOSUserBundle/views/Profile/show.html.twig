{% extends "adminBundle/baseTemplate/admin_base.html.twig" %}
{% block body %}

<section class="content-header">
    <h1>
        User Profile
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li><a href="#">dashboard</a></li>
        <li class="active">User profile</li>
    </ol>
</section>

<!-- Main content -->
    <section class="content">

        <div class="row">
            <div class="col-md-3">

                <!-- Profile Image -->
                <div class="box box-primary">
                    <div class="box-body box-profile">
                        <img class="profile-user-img img-responsive img-circle" src="{{ asset('AdminBundle/dist/img/user2-160x160.jpg') }}" alt="User profile picture">

                        <h3 class="profile-username text-center"> {{ user.username }}</h3>

                        <p class="text-muted text-center">{{ user.email }}</p>


                        <a href="#" class="btn btn-primary btn-block"><b>update picture</b></a>

                    </div>
                    <!-- /.box-body -->
                </div>
                <!-- /.box -->


                <div class="box box-widget widget-user-2">
                    <!-- Add the bg color to the header using any of the bg-* classes -->

                    <div class="box-footer no-padding">
                        <ul class="nav nav-stacked">
                            <li><a href="{{ path('fos_user_profile_edit') }}">Edit  <span class="pull-right badge bg-blue"></span></a></li>
                            <li><a href="{{ path('fos_user_change_password') }}">Change-password <span class="pull-right badge bg-aqua"></span></a></li>


                        </ul>
                    </div>
                </div>



            </div>
            <!-- /.col -->
            <div class="col-md-9">


                    <div class="box box-primary">
                        <div class="box-header with-border">
                            <h3 class="box-title">About Me</h3>
                        </div>
                        <!-- /.box-header -->
                        <div class="box-body">
                            <strong> Email</strong>

                            <p class="text-muted">
                                {{ user.email}}
                            </p>

                            <hr>

                            <strong>
                                 Role</strong>

                            <p class="text-muted">
                                {{ user.roles[0]}}
                            </p>

                            <hr>

                            <strong>Last login</strong>

                            <p>

                                <span class="label label-info">{{ user.lastlogin|date('d-m-Y H:i:s') }}</span>

                            </p>

                            <hr>


                        </div>
                        <!-- /.box-body -->
                    </div>

                        <!---change password-->

                        <!-- /.tab-pane -->

                    <!-- /.tab-content -->

                <!-- /.nav-tabs-custom -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->

    </section>
{% endblock %}
