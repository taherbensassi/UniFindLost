<style>
    .req{
        color: red;
    }
</style>
<div class="col-lg-9 linear-background " id="formOfFound" >
</div>
<div class="col-lg-9 " id="formOfFound" style="display: none" >


    {{ form_start(form) }}


    <div id="smartwizard">
        <ul>
            <li><a href="#step-1">Step 1<br /><small>What have you found?</small></a></li>
            <li><a href="#step-2">Step 2<br /><small>Where did you found?</small></a></li>
            <li><a href="#step-3">Step 3<br /><small>Item picture</small></a></li>
            <li><a href="#step-4">Step 4<br /><small>Upload the Item</small></a></li>
        </ul>

        <div>
            <div id="step-1" class="">
                <h3 class="border-bottom border-gray pb-2">What have you found?</h3>


                <div class="form-group col-xs-6" >
                    <label class="control-label col-sm-5">Name of item <span class="req"> *</span></label>
                    {{ form_widget(form.name, { 'attr': {'class': 'form-control' } }) }}
                </div>


                <div class="form-group col-xs-6" >
                    <label class="control-label col-sm-5">Category <span class="req"> *</span></label>
                    {{ form_widget(form.category, { 'attr': {'class': 'form-control' } }) }}
                </div>

                <hr>
                <p>When did you find it?</p>

                <div class="form-group col-xs-6" >
                    <label class="control-label col-sm-5">Date <span class="req"> *</span></label>
                    {{ form_widget(form.foundOn, { 'attr': {'class': 'form-control' } }) }}
                </div>

            </div>
            <div id="step-2" class="">
                <h3 class="border-bottom border-gray pb-2">Step 2 Content</h3>
                <div>

                    {% autoescape 'html' %}
                        {{ map.html |raw }}

                    {% endautoescape %}

                </div>

            </div>



            <div id="step-3" class="">
                <h3 class="border-bottom border-gray pb-2">Picture of item?</h3>

                <div class="form-group col-xs-6" >
                    <label class="control-label col-sm-5">photo <span class="req"> *</span></label>
                    {{ form_widget(form.photo, { 'attr': {'class': 'form-control' } }) }}
                    <p>
                        If possible upload an image of the item.
                        It will help the owner to find it and will prevent you to receive irrelevant requests.
                    </p>
                </div>

                <div class="form-group col-xs-6" >
                    <label class="control-label col-sm-5">Other information</label>
                    {{ form_widget(form.otherInfo, { 'attr': {'class': 'form-control' } }) }}
                </div>

            </div>
            <div id="step-4" class="">
                <h3 class="border-bottom border-gray pb-2">Step 4 Content</h3>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" value="" id="defaultCheck1">
                        <label class="form-check-label" for="defaultCheck1">
                            Information
                        </label>
                    </div>

            </div>
        </div>
    </div>
    {{ form_end(form) }}




</div>