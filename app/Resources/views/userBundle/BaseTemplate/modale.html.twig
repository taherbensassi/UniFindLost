<!-- ------- LOGIN ------- -->
<div class="modal fade" id="LogInModal" tabindex="-1" role="dialog" aria-labelledby="modalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">×</span><span class="sr-only">Close</span></button>
            </div>
            <div class="modal-body">
                <form action="{{ path("fos_user_security_check") }}" method="post">
                    <input type="hidden" name="_csrf_token" value="{{ fos_csrf_provider.refreshToken('authenticate') }}" />

                    <!-- Form Title -->

                    <div class="form-heading text-center">
                        <div class="title">Sign In</div>
                        <div class="description-block">
                            You can sign in using your FindLost account to access our services.
                        </div>

                        <!-- Social Line -->

                            <div class="text-center social-btn">
                                <a href="{{ path('hwi_oauth_service_redirect', {'service': 'facebook'}) }}" class="btn btn-primary btn-block" style="    background-color: #3B5998;
    border-color: #3B5998;"><i class="fa fa-facebook"></i> Sign in with <b>Facebook</b></a>
                                <a href="{{ path('hwi_oauth_service_redirect', {'service': 'google'}) }}" class="btn btn-danger btn-block"><i class="fa fa-google"></i> Sign in with <b>Google</b></a>
                            </div>


                    </div>
                    <div class="or-seperator"><i>or</i></div>
                    <div class="row">
                        <div class="col-md-12">
                            <input type="text" id="username" class="form-control" placeholder="Email" name="_username"  required="required" autocomplete="username" />
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <input type="password" id="password" class="form-control" placeholder="Password" name="_password" required="required" autocomplete="current-password" />
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <input type="checkbox" id="remember_me"  name="_remember_me" value="on" />
                            <label>Remember Me</label>
                        </div>
                        <div class="col-md-5 col-md-offset-1">
                            <label>Don't have an account yet? <a href="#" data-toggle="modal" data-target="#RegistrationModal" data-dismiss="modal">Sign up</a></label>

                            <label><a href="#" data-toggle="modal" data-target="#ForgotModal" data-dismiss="modal">Forget Password?</a></label>

                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12 text-center">
                            <button class="btn btn-block btn-primary" >Sign In</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
