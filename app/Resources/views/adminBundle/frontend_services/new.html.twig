{% extends 'adminBundle/baseTemplate/admin_base.html.twig' %}
{% block stylesheet %}
    <link href="{{ asset('AdminBundle/fontawsome_plugin/dist/css/fontawesome-iconpicker.css') }}" rel="stylesheet">

{% endblock %}
{% block body %}

    <!-- Content Header (Page header) -->
    <section class="content-header">

        <div class="sticky-wrapper">
            <nav class="navbar navbar-default" role="navigation">
                <div class="container-fluid">

                    <div class="navbar-collapse">
                        <div class="navbar-left">
                            <ol class="breadcrumb" style="    padding: 4px 15px;padding-top: 16px;margin-bottom: -2px;list-style: none;background-color: #f8f8f8;border-radius: 4px;">
                                <li><a href="{{ path('dashboard') }}"><i class="fa fa-dashboard"></i> Home</a></li>
                                <li ><a href="{{ path('frontend_services_index') }}">Services section</a></li>
                                <li class="active">New</li>

                            </ol>
                        </div>



                        <ul class="nav navbar-nav navbar-right">
                            <li><a class="sonata-action-element" href="{{ path('frontend_services_new') }}"><i class="fa fa-plus-circle"></i>
                                    Add new</a></li>
                        </ul>



                    </div>
                </div>
            </nav>
        </div>
    </section>

    <!-- Main content -->
    <section class="content">

        <!-- Default box -->
        <div class="box">
            <div class="box-header with-border">
                <h3 class="box-title">Create New service section</h3>

                <div class="box-tools pull-right">
                    <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip"
                            title="Collapse">
                        <i class="fa fa-minus"></i></button>
                    <button type="button" class="btn btn-box-tool" data-widget="remove" data-toggle="tooltip" title="Remove">
                        <i class="fa fa-times"></i></button>
                </div>
            </div>
            <div class="box-body">



                {{ form_start(form) }}



                <div class="form-group">
                    <label for="logo">Services name</label>
                    {{ form_widget(form.serviceName, { 'attr': {'class': 'form-control' } }) }}
                    <span class="help-block" style="color: red;">{{ form_errors(form.serviceName) }}</span>

                </div>

                <div class="form-group">
                    <label for="logo">service Icon</label>
                    {{ form_widget(form.serviceIcon, { 'attr': {'class': 'form-control icp icp-auto' } }) }}
                    <span class="help-block" style="color: red;">{{ form_errors(form.serviceIcon) }}</span>
                    <p class="help-block">Chose icon which will be with the service in the front-end</p>
                </div>

                <div class="form-group">
                    <label for="logo">service Description</label>
                    {{ form_widget(form.serviceDescription, { 'attr': {'class': 'form-control' } }) }}
                    <span class="help-block" style="color: red;">{{ form_errors(form.serviceDescription) }}</span>

                </div>








            </div>
            <div class="box-footer">
                <button type="submit" class="btn btn-success" name="btn_create_and_list"><i class="fa fa-save"></i> <i class="fa fa-list"></i> Create and return to list</button>
                {{ form_end(form) }}
            </div>
            <!-- /.box-body -->
            <!-- /.box-footer-->
        </div>
        <!-- /.box -->

    </section>
{% endblock %}
{% block javascript %}
    <script src="{{ asset('AdminBundle/fontawsome_plugin/dist/js/fontawesome-iconpicker.js') }}"></script>
    <script>


        $(function () {
            $('.icp-auto').iconpicker();
        });
    </script>


{% endblock %}


